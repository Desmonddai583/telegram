<div class="login-panel">
  <div class='left'>
    <div class='left-body'>
      <div class="logo">
        <img src="images/telegram-logo.png">
      </div>
    </div>
  </div>
  <div class='right'>
    <img class='postmark' src="images/postmark.png">
    <div class='input-field'>
      <label>Get going ...</label>
      <br/>
      <br/>
      {{input type="text" placeholder="Enter your username ..." value=username}}
      <br/>
      {{input type="password" placeholder="Enter your password ..." value=password}}
      <br/>
      <br/>
      <br/>
      <button type='button' class='login' {{action 'login'}}>Login</button>  
      <div class="link">
        <span>{{#link-to 'auth.forgotpass'}}Recover password{{/link-to}} or {{#link-to 'auth.signup'}}Sign up{{/link-to}}</span>
      </div>
    </div>
  </div>
</div>
