{{#if isSelf}}
  <li class="right clearfix">
    <span class="chat-img pull-right">
      <img {{bind-attr src=message.sender.photo}} height="50" weight="50" alt="User Avatar" class="img-circle" />
    </span>
    <div class="chat-body clearfix">
      <div class="message-header">
        <small class=" text-muted"><span class="glyphicon glyphicon-time"></span>{{format-time message.date}}</small>
        <strong class="pull-right primary-font">{{message.sender.name}}</strong>
      </div>
      <p>
        {{message.body}}
      </p>
    </div>
  </li>
{{else}}
  <li class="left clearfix">
    <span class="chat-img pull-left">
    <img {{bind-attr src=message.sender.photo}} height="50" weight="50" alt="User Avatar" class="img-circle" />
    </span>
    <div class="chat-body clearfix">
      <div class="message-header">
        <strong class="primary-font">{{message.sender.name}}</strong> <small class="pull-right text-muted">
          <span class="glyphicon glyphicon-time"></span>{{format-time message.date}}</small>
      </div>
      <p>
        {{message.body}}
      </p>
    </div>
  </li>
{{/if}}
