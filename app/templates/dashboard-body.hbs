<div class='dashboard-body col-md-6 col-md-offset-3'>
  <div class="publish">
    {{textarea class='form-control' value=body rows='4'}}
    <div class="bottom-section">
      <span>{{remainingWords}} characters</span>
      <button class='btn btn-default' {{action publish}}>Publish</button>
    </div>
  </div>

  <div class="latest-post">
    <hr>
      <div class="title">
        <p class='text-center'>Latest posts</p>
      </div>
    <hr>
    <div class="content">
      {{#each}}
        <div class='photo'>
          <a><img {{bindAttr src=author.photo}} height="60" width="60"></a>
        </div>
        <div class='body'>
          <p><strong>{{author.name}}</strong></p>
          <p>{{body}}</p>
          <span><em>{{format-time date}}</em> . </span>
          <span><a>Delete</a></span>
        </div>
        <hr>
      {{/each}}
    </div>
  </div>
</div>