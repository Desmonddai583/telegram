<div class="profile">
  {{outlet header}}
  <div class="profile-body col-xs-6 col-md-4 col-md-offset-4 text-center">
    {{upload-block}}
    <div class="form-group">
    <label for="name">Name</label>
    {{input type="text" class="form-control" id="name" name="full_name" value=fullName}}<br/>
    <label for="email">Email</label>
    {{input type="text" class="form-control" id="email" name="email" value=email}}<br/><br/>
    <input type="submit" value="Update profile" class="btn btn-info" {{action 'updateProfile'}}/>
    </div>
  </div>
</div>
