<div class="followers col-md-6 col-md-offset-3">
  <div class="content">
    {{#each user in controller}}
      <div class='user-info'>
        <a><img {{bind-attr src=user.photo}} height="60" width="60"></a>
        <span><strong>{{user.name}}</strong></span>
        {{#if session.isAuthenticated}}
          {{#if user.isFollowedByCurrentUser}}
            <button type='button' class='unfollow' {{action 'unfollow' id}}>unFollow</button>
          {{else}}
            <button type='button' class='follow' {{action 'follow' id}}>Follow</button>
          {{/if}}   
        {{/if}}
      </div>
      <hr>
    {{/each}}
  </div>
</div>